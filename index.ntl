<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <title>Woa tro lol</title>
        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>
    <body>
        <div class="acceuil">
            <div class="row">
                <div class="popup">
                    <h1>Choisissez un pseudo :</h1>
                    <input type="text" class="form-control form-pseudo" id="pseudo" placeholder="Pseudo">
                    <button class="btn btn-outline-primary btn-pseudo" id="btnPseudo" type="button">Go!</button>
                </div>
            </div>
        </div>
        <canvas id="renderCanvas"></canvas>
        <div class="userInterface">
            <div class="lifebar"><div class="actualLife"></div></div>
            <span id="crosshair1"></span>
            <span id="crosshair2"></span>
            <span id="amo">?/30</span>
            <div id="interface"><h1>I</h1></div>
            <div id="chat"></div>
        </div>
        <script src="js/scripts/jquery-3.1.1.min.js"></script>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <script src="js/scripts/bootstrap.min.js"></script>
        <script src="js/scripts/socket.io.js"></script>
        <script type="text/javascript">
            var pseudo=null;
            var hp=100;
            var camera;
            $(".actualLife").width(hp + '%');
            $(".userInterface").hide();
            var socket = io.connect('http://blockshoter-blockshoter.44fs.preview.openshiftapps.com:8000/', {'forceNew':true });
            //var socket = io.connect('http://#ip#:8000');
            $(document).ready(function(){
                $('#btnPseudo').click(function() {
                    pseudo=$('#pseudo').val().toString();
                    if(pseudo!=null){
                        socket.emit('petit_nouveau', pseudo);
                        runDemo("renderCanvas");
                        $(".userInterface").show();
                        $(".acceuil").hide();
                    }
                });
            });

        </script>
        <script src="js/scripts/babylon.2.4.js"></script>
        <script src="js/scripts/cannon.min.js"></script>
        <script src="js/scripts/hand.minified-1.3.7.js"></script>
        <script src="js/functions.js"></script>
        <script src="js/game.js"></script>
        <script src="js/interface.js"></script>


    </body>
</html>